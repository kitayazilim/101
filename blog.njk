---
layout: layouts/base.njk
eleventyNavigation:
  key: Blog
  order: 3
  aka: blog
baslik: Blog
---

<section class="hero-wrap hero-wrap-2" style="height:300px; background-image: url('{{'/assets/images/blog-detay.jpg' | url}}');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-end justify-content-center" style="height:300px">
            <div class="col-md-9 ftco-animate pb-5 text-center">
                <p class="breadcrumbs">
                    <span class="mr-2">
                        <a href="/">
                            <span class="lang" key="anasayfa">Anasayfa</span>
                            <i class="fa fa-chevron-right"></i>
                        </a>
                    </span>
                    <span class="lang" key="bloglar">
                        Blog Yazıları
                    </span>
                </p>
                <h1 class="mb-0 bread lang" key="bloglar">Blog Yazıları</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row d-flex">
            {% set bloglar = collections.Bloglar | reverse %}
            {%- for item in bloglar -%}
                <div class="col-lg-4 ftco-animate">
                    <div class="blog-entry">
                        <a href="{{item.url | url}}" class="block-20" style="background-image: url('{{item.data.image | url}}');"></a>
                        <div class="text d-block">
                            <div class="meta">
                                <p>
                                    <a href="#">
                                        <span class="fa fa-calendar mr-2"></span>{{item.data.tarih}}</a>
                                    <a href="#">
                                        <span class="fa fa-user mr-2"></span>{{item.data.yazan}}</a>
                                </p>
                            </div>
                            <h3 class="heading" style="height:66px">
                                <a href="{{item.url | url}}">{{item.data.title}}</a>
                            </h3>
                            <p style="height:85px">{{item.data.ozet}}</p>
                            <p>
                                <a href="{{item.url | url}}" class="btn btn-secondary py-2 px-3 lang" key="dahafazla">Devamı</a>
                            </p>
                        </div>
                    </div>
                </div>
            {%- endfor -%}
        </div>
    </div>
</section>